<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="392.0" prefWidth="340.0" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.conversionmonedas.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="cantidadInput" promptText="Ingrese el monto" />

    <HBox alignment="CENTER" spacing="10.0">
        <ComboBox fx:id="comboMonedaOrigen" promptText="Origen" />
        <Label text="a" />
        <ComboBox fx:id="comboMonedaDestino" promptText="Destino" />
    </HBox>

    <Button onAction="#convertirMonto" text="Convertir monto" />

    <Label fx:id="resultadoLabel" text="Esperando conversion..." />
 </VBox>
